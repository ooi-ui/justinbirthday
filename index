         preload="auto"></audio>

  <!-- Fireworks Canvas -->
  <canvas id="fireworksCanvas"></canvas>

  <script>
    function closeModal() {
      document.getElementById('birthdayModal').style.display = 'none';
    }

    function celebrate() {
      // Play music
      document.getElementById('birthdayMusic').play().catch(err => {
        console.log("Autoplay blocked:", err);
      });

      // Confetti burst
      for (let i = 0; i < 50; i++) createConfetti();

      // Fireworks after 20s
      setTimeout(startFireworks, 20000);
    }

    function createConfetti() {
      const confetti = document.createElement('div');
      confetti.style.position = 'fixed';
      confetti.style.top = '-10px';
      confetti.style.left = Math.random() * 100 + 'vw';
      confetti.style.width = '10px';
      confetti.style.height = '10px';
      confetti.style.background = ['#ff6b6b','#feca57','#48dbfb','#ff9ff3','#54a0ff','#5f27cd'][Math.floor(Math.random()*6)];
      confetti.style.animation = `fall ${Math.random()*3+2}s linear forwards`;
      confetti.style.opacity = '1';
      document.body.appendChild(confetti);
      setTimeout(()=>confetti.remove(),5000);
    }

    // Fireworks
    function startFireworks() {
      const canvas = document.getElementById('fireworksCanvas');
      const ctx = canvas.getContext('2d');
      canvas.style.display = 'block';
      canvas.width = window.innerWidth;
      canvas.height = window.innerHeight;

      const particles = [];

      function createFirework(x,y){
        for(let i=0;i<100;i++){
          particles.push({
            x,y,
            angle:Math.random()*2*Math.PI,
            speed:Math.random()*5+2,
            radius:2,
            life:100
          });
        }
      }

      function animate(){
        ctx.fillStyle="rgba(0,0,0,0.2)";
        ctx.fillRect(0,0,canvas.width,canvas.height);

        for(let i=particles.length-1;i>=0;i--){
          const p=particles[i];
          p.x+=Math.cos(p.angle)*p.speed;
          p.y+=Math.sin(p.angle)*p.speed;
          p.life--;
          ctx.beginPath();
          ctx.arc(p.x,p.y,p.radius,0,Math.PI*2);
          ctx.fillStyle=`hsl(${Math.random()*360},100%,50%)`;
          ctx.fill();
          if(p.life<=0) particles.splice(i,1);
        }

        requestAnimationFrame(animate);
      }

      createFirework(canvas.width/2, canvas.height/2);
      animate();
    }

    // Auto-close modal after 3s
    setTimeout(() => {
      if (document.getElementById('birthdayModal').style.display !== 'none') {
        closeModal();
      }
    }, 3000);
  </script>
</body>
